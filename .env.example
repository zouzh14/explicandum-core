# Google Gemini API Key from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Database URL (SQLite by default) - 数据库文件已移动到 data/ 目录
DATABASE_URL=sqlite:///./data/explicandum.db

# JWT Secret Key - generate a secure key using: python3 -c "import secrets; print('SECRET_KEY=\"' + secrets.token_urlsafe(32) + '\"')"
SECRET_KEY=your_secure_jwt_secret_key_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Resend API Key for Email Verification (from https://resend.com)
RESEND_API_KEY=your_resend_api_key_here

# Mail domain for verification emails
MAIL_DOMAIN=google.com

# Skip actual email sending in development/test (true/false)
SKIP_EMAIL_SENDING=false

# Security Monitoring Configuration
FROM_EMAIL=noreply@explicandum.ai
ALERT_EMAIL=any@tsinghua.org.cn
CC_EMAIL=any@gmail.com
SYSTEM_URL=https://google.com

# Redis Configuration for Celery
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0

# Risk Monitoring Settings
RISK_MONITORING_ENABLED=true
RISK_DETECTION_INTERVAL=300  # seconds (5 minutes)
DAILY_REPORT_TIME=09:00  # UTC time for daily report
